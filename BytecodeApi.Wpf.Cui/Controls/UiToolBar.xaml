<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiToolBar}" BasedOn="{StaticResource {x:Type ToolBar}}">
		<Setter Property="ToolBarTray.IsLocked" Value="True" />
		<Setter Property="Padding" Value="3" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Foreground" Value="Black" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiToolBar}">
					<Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<DockPanel>
							<Path Name="Thumb" Data="M3,0 H4 V1 H3 Z M7,0 H8 V1 H7 Z M5,2 H6 V3 H5 Z M3,4 H4 V5 H3 Z M7,4 H8 V5 H7 Z M5,6 H6 V7 H5 Z M3,8 H4 V9 H3 Z M7,8 H8 V9 H7 Z M5,10 H6 V11 H5 Z M3,12 H4 V13 H3 Z M7,12 H8 V13 H7 Z M5,14 H6 V15 H5 Z M3,16 H4 V17 H3 Z M7,16 H8 V17 H7 Z" Fill="#4c5787" Width="11" Height="17" Margin="0,0,-3,0" SnapsToDevicePixels="True" />
							<ToolBarPanel Name="PART_ToolBarPanel" IsItemsHost="True" Margin="{TemplateBinding Padding}" KeyboardNavigation.TabNavigation="Cycle" />
						</DockPanel>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="ShowThumb" Value="False">
							<Setter TargetName="Thumb" Property="Visibility" Value="Collapsed" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Resources>
			<Style TargetType="{x:Type Grid}">
				<Style.Triggers>
					<Trigger Property="Name" Value="OverflowGrid">
						<Setter Property="Visibility" Value="Collapsed" />
					</Trigger>
				</Style.Triggers>
			</Style>
			<Style TargetType="{x:Type ctrl:UiDropDownButton}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
				<Setter Property="MinWidth" Value="22" />
				<Setter Property="Height" Value="24" />
				<Setter Property="Padding" Value="4,0" />
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ctrl:UiDropDownButton}">
							<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
								<Grid>
									<DockPanel>
										<Path Name="Arrow" DockPanel.Dock="Right" Data="M 0 0 L 6 0 L 3 3 Z" Margin="0,0,3,0" VerticalAlignment="Center" Fill="Black" />
										<ContentPresenter Name="Content" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}" TextElement.Foreground="{TemplateBinding Foreground}" />
									</DockPanel>
									<Popup Name="PART_Popup" Placement="Bottom" HorizontalOffset="-1" VerticalOffset="1" MinWidth="{TemplateBinding ActualWidth, Converter={ui:MathConverter Add}, ConverterParameter={ui:Double 10}}" AllowsTransparency="True" StaysOpen="True" Focusable="False">
										<Border Margin="0,0,10,10" BorderThickness="1" BorderBrush="#5d6b99" Background="#ecf4ff">
											<Border.Effect>
												<DropShadowEffect BlurRadius="4" ShadowDepth="4" Opacity=".4" />
											</Border.Effect>
											<ContentPresenter Name="DropDownContent" ContentSource="DropDownContent" TextElement.Foreground="{TemplateBinding Foreground}" />
										</Border>
									</Popup>
								</Grid>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsDropDownContextMenu" Value="True">
									<Setter TargetName="DropDownContent" Property="Content" Value="{x:Null}" />
								</Trigger>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="Border" Property="BorderBrush" Value="#5d6b99" />
									<Setter TargetName="Border" Property="Background" Value="#ecf4ff" />
								</Trigger>
								<Trigger Property="IsPressed" Value="True">
									<Setter TargetName="Border" Property="Background" Value="White" />
								</Trigger>
								<Trigger Property="IsDropDownOpen" Value="True">
									<Setter TargetName="Border" Property="BorderBrush" Value="#5d6b99" />
									<Setter TargetName="Border" Property="Background" Value="White" />
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter Property="Foreground" Value="#757575" />
									<Setter TargetName="Content" Property="TextElement.Foreground" Value="#757575" />
									<Setter TargetName="Arrow" Property="Fill" Value="#909090" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style TargetType="{x:Type ctrl:UiSplitButton}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
				<Setter Property="MinWidth" Value="22" />
				<Setter Property="Height" Value="24" />
				<Setter Property="Padding" Value="4,0" />
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ctrl:UiSplitButton}">
							<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
								<Grid>
									<DockPanel>
										<Button Name="PART_DropDownButton" DockPanel.Dock="Right" Margin="-1" Focusable="False">
											<Button.Style>
												<Style TargetType="{x:Type Button}">
													<Setter Property="BorderBrush" Value="Transparent" />
													<Setter Property="Background" Value="Transparent" />
													<Setter Property="Template">
														<Setter.Value>
															<ControlTemplate TargetType="{x:Type Button}">
																<Border Name="Border" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
																	<Path Name="Arrow" Data="M 0 0 L 6 0 L 3 3 Z" Margin="3,0" VerticalAlignment="Center" Fill="Black" />
																</Border>
																<ControlTemplate.Triggers>
																	<Trigger Property="IsPressed" Value="True">
																		<Setter TargetName="Border" Property="Background" Value="White" />
																	</Trigger>
																	<Trigger Property="IsEnabled" Value="False">
																		<Setter TargetName="Arrow" Property="Fill" Value="#909090" />
																	</Trigger>
																</ControlTemplate.Triggers>
															</ControlTemplate>
														</Setter.Value>
													</Setter>
												</Style>
											</Button.Style>
										</Button>
										<ContentPresenter Name="Content" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}" TextElement.Foreground="{TemplateBinding Foreground}" RecognizesAccessKey="True" />
									</DockPanel>
									<Popup Name="PART_Popup" Placement="Bottom" HorizontalOffset="-1" VerticalOffset="1" MinWidth="{TemplateBinding ActualWidth, Converter={ui:MathConverter Add}, ConverterParameter={ui:Double 10}}" AllowsTransparency="True" StaysOpen="True" Focusable="False">
										<Border Name="PART_PopupBorder" Margin="0,0,10,10" BorderThickness="1" BorderBrush="#5d6b99" Background="#ecf4ff">
											<Border.Effect>
												<DropShadowEffect BlurRadius="4" ShadowDepth="4" Opacity=".4" />
											</Border.Effect>
											<ContentPresenter Name="DropDownContent" ContentSource="DropDownContent" />
										</Border>
									</Popup>
								</Grid>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsDropDownContextMenu" Value="True">
									<Setter TargetName="DropDownContent" Property="Content" Value="{x:Null}" />
								</Trigger>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="Border" Property="BorderBrush" Value="#5d6b99" />
									<Setter TargetName="Border" Property="Background" Value="#ecf4ff" />
									<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#5d6b99" />
									<Setter TargetName="PART_DropDownButton" Property="Background" Value="#ecf4ff" />
								</Trigger>
								<Trigger Property="IsPressed" Value="True">
									<Setter TargetName="Border" Property="Background" Value="White" />
								</Trigger>
								<Trigger Property="IsDropDownOpen" Value="True">
									<Setter TargetName="Border" Property="BorderBrush" Value="#5d6b99" />
									<Setter TargetName="Border" Property="Background" Value="White" />
									<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="Transparent" />
									<Setter TargetName="PART_DropDownButton" Property="Background" Value="White" />
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter Property="Foreground" Value="#757575" />
									<Setter TargetName="Content" Property="TextElement.Foreground" Value="#757575" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Style.Resources>
	</Style>
</ResourceDictionary>