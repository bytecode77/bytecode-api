<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiDataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="#f6f6f6" />
		<Setter Property="HorizontalGridLinesBrush" Value="#e0e0e0" />
		<Setter Property="VerticalGridLinesBrush" Value="#e0e0e0" />
		<Setter Property="EnableRowVirtualization" Value="True" />
		<Setter Property="EnableColumnVirtualization" Value="True" />
		<Setter Property="ScrollViewer.CanContentScroll" Value="True" />
		<Setter Property="RowHeaderWidth" Value="50" />
		<Style.Triggers>
			<Trigger Property="IsKeyboardFocusWithin" Value="True">
				<Setter Property="BorderBrush" Value="#006bbe" />
			</Trigger>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="BorderBrush" Value="#006bbe" />
			</Trigger>
			<Trigger Property="IsEnabled" Value="False">
				<Setter Property="Foreground" Value="#757575" />
				<Setter Property="BorderBrush" Value="#e9e9e9" />
				<Setter Property="Background" Value="#f9f9f9" />
				<Setter Property="HorizontalGridLinesBrush" Value="#e9e9e9" />
				<Setter Property="VerticalGridLinesBrush" Value="#e9e9e9" />
			</Trigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>