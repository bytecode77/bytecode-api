<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiBusyIndicator}">
		<Setter Property="Background" Value="#30000000" />
		<Setter Property="Foreground" Value="#b0000000" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiBusyIndicator}">
					<Viewbox RenderTransformOrigin="0,0">
						<Canvas Width="110" Height="110" RenderTransformOrigin=".5,.5">
							<Path Canvas.Left="55" Canvas.Top="55" StrokeThickness="8" Stroke="{TemplateBinding Background}">
								<Path.Data>
									<EllipseGeometry RadiusX="50" RadiusY="50" />
								</Path.Data>
							</Path>
							<Path Canvas.Left="55" Canvas.Top="55" StrokeThickness="8" Stroke="{TemplateBinding Foreground}">
								<Path.Data>
									<PathGeometry>
										<PathFigure x:Name="PART_Figure">
											<ArcSegment x:Name="PART_Arc" Size="50,50" SweepDirection="Clockwise" />
										</PathFigure>
										<PathGeometry.Transform>
											<RotateTransform Angle="0" />
										</PathGeometry.Transform>
									</PathGeometry>
								</Path.Data>
							</Path>
							<Canvas.RenderTransform>
								<RotateTransform x:Name="Transform" Angle="0" />
							</Canvas.RenderTransform>
							<Canvas.Triggers>
								<EventTrigger RoutedEvent="Loaded">
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation Storyboard.TargetName="Transform" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</Canvas.Triggers>
						</Canvas>
					</Viewbox>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>