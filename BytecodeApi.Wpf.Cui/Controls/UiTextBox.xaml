<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiTextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
		<Setter Property="Padding" Value="3" />
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="White" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiTextBox}">
					<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<Grid>
							<ScrollViewer Name="PART_ContentHost" />
							<Grid Margin="{TemplateBinding Padding}">
								<ContentPresenter Name="Watermark" Content="{TemplateBinding Watermark}" IsHitTestVisible="False" VerticalAlignment="Top" Margin="2,0,0,0" Opacity=".6" />
							</Grid>
							<Popup Name="PART_AutoCompletePopup" VerticalOffset="1" HorizontalOffset="-1" Placement="Bottom" Width="{Binding ActualWidth, ElementName=Border, Converter={ui:MathConverter Add}, ConverterParameter={ui:Double 10}}" MaxHeight="245" AllowsTransparency="True">
								<Border Margin="0,0,10,10" BorderThickness="1" BorderBrush="#bababa" Background="White">
									<Border.Effect>
										<DropShadowEffect BlurRadius="4" ShadowDepth="4" Opacity=".4" />
									</Border.Effect>
									<ctrl:UiListBox x:Name="PART_AutoCompleteListBox" ItemsSource="{TemplateBinding AutoCompleteItems}" BorderThickness="0" />
								</Border>
							</Popup>
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsMouseOver" Value="True" />
								<Condition Property="IsReadOnly" Value="False" />
							</MultiTrigger.Conditions>
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
						</MultiTrigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsKeyboardFocusWithin" Value="True" />
								<Condition Property="IsReadOnly" Value="False" />
							</MultiTrigger.Conditions>
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
						</MultiTrigger>
						<Trigger Property="IsReadOnly" Value="True">
							<Setter TargetName="Border" Property="Background" Value="#fafafa" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="Border" Property="Background" Value="#f9f9f9" />
						</Trigger>
						<DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}, Converter={ui:StringEmptyConverter NotNullOrEmpty}}" Value="True">
							<Setter TargetName="Watermark" Property="Visibility" Value="Collapsed" />
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="ContextMenu">
			<Setter.Value>
				<ContextMenu>
					<MenuItem Command="Undo">
						<MenuItem.Icon>
							<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Undo.svg" Stretch="None" />
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Command="Redo">
						<MenuItem.Icon>
							<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Redo.svg" Stretch="None" />
						</MenuItem.Icon>
					</MenuItem>
					<Separator />
					<MenuItem Command="Cut">
						<MenuItem.Icon>
							<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Cut.svg" Stretch="None" />
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Command="Copy">
						<MenuItem.Icon>
							<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Copy.svg" Stretch="None" />
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Command="Paste">
						<MenuItem.Icon>
							<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Paste.svg" Stretch="None" />
						</MenuItem.Icon>
					</MenuItem>
					<Separator />
					<MenuItem Command="SelectAll" />
				</ContextMenu>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>