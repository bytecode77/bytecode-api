<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiPasswordBox}">
		<Setter Property="Padding" Value="3" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="White" />
		<Setter Property="IsTabStop" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiPasswordBox}">
					<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<DockPanel>
							<Grid DockPanel.Dock="Right" Visibility="{TemplateBinding Password, Converter={ui:StringEmptyConverter NotNullOrEmpty, Visibility}}">
								<ctrl:UiFlatButton x:Name="PART_PreviewButton" Opacity=".8" OpacityMouseOver="1" Focusable="False" Visibility="Collapsed" ToolTip="Show passwort">
									<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/PasswordPreview.svg" Width="16" Height="16" Margin="4,3,4,0" />
								</ctrl:UiFlatButton>
							</Grid>
							<Grid>
								<PasswordBox Name="PART_PasswordBox" Padding="{TemplateBinding Padding}" BorderThickness="0" Foreground="{TemplateBinding Foreground}" Background="Transparent">
									<PasswordBox.InputBindings>
										<KeyBinding Key="C" Modifiers="Ctrl" Command="{x:Static ctrl:UiPasswordBox.CopyPasswordCommand}" />
										<KeyBinding Key="X" Modifiers="Ctrl" Command="{x:Static ctrl:UiPasswordBox.CutPasswordCommand}" />
									</PasswordBox.InputBindings>
									<PasswordBox.ContextMenu>
										<ContextMenu>
											<MenuItem Header="Cut" InputGestureText="Ctrl+X" Command="{x:Static ctrl:UiPasswordBox.CutPasswordCommand}">
												<MenuItem.Icon>
													<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Cut.svg" Stretch="None" />
												</MenuItem.Icon>
											</MenuItem>
											<MenuItem Header="Copy" InputGestureText="Ctrl+C" Command="{x:Static ctrl:UiPasswordBox.CopyPasswordCommand}">
												<MenuItem.Icon>
													<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Copy.svg" Stretch="None" />
												</MenuItem.Icon>
											</MenuItem>
											<MenuItem Command="Paste" IsEnabled="{TemplateBinding IsReadOnly, Converter={ui:BooleanConverter Inverse}}">
												<MenuItem.Icon>
													<ctrl:UiSvgImage Source="/BytecodeApi.Wpf.Cui;component/Resources/Icons/Paste.svg" Stretch="None" />
												</MenuItem.Icon>
											</MenuItem>
											<Separator />
											<MenuItem Command="SelectAll" />
										</ContextMenu>
									</PasswordBox.ContextMenu>
								</PasswordBox>
								<TextBox Name="PreviewTextBox" Text="{TemplateBinding Password}" IsReadOnly="True" Padding="{TemplateBinding Padding}" BorderThickness="0" Foreground="{TemplateBinding Foreground}" Background="Transparent" Visibility="Collapsed" />
							</Grid>
						</DockPanel>
					</Border>
					<ControlTemplate.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsMouseOver" Value="True" />
								<Condition Property="CanPreview" Value="True" />
							</MultiTrigger.Conditions>
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="PART_PreviewButton" Property="Visibility" Value="Visible" />
						</MultiTrigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsKeyboardFocusWithin" Value="True" />
								<Condition Property="CanPreview" Value="True" />
							</MultiTrigger.Conditions>
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="PART_PreviewButton" Property="Visibility" Value="Visible" />
						</MultiTrigger>
						<Trigger Property="IsReadOnly" Value="True">
							<Setter TargetName="Border" Property="Background" Value="#fafafa" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="PART_PasswordBox" Property="Foreground" Value="#757575" />
							<Setter TargetName="PreviewTextBox" Property="Foreground" Value="#757575" />
							<Setter TargetName="PART_PasswordBox" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="Border" Property="Background" Value="#f9f9f9" />
						</Trigger>
						<Trigger Property="PreviewPassword" Value="True">
							<Setter TargetName="PART_PasswordBox" Property="Visibility" Value="Collapsed" />
							<Setter TargetName="PreviewTextBox" Property="Visibility" Value="Visible" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>