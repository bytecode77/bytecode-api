<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiDropDownButton}" BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="MinWidth" Value="85" />
		<Setter Property="Padding" Value="8,3" />
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="White" />
		<Setter Property="ClickMode" Value="Press" />
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiDropDownButton}">
					<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<Grid>
							<DockPanel>
								<Path Name="Arrow" DockPanel.Dock="Right" Data="M 0 0 L 6 0 L 3 3 Z" Margin="0,0,3,0" VerticalAlignment="Center" Fill="Black" />
								<ContentPresenter Name="Content" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}" TextElement.Foreground="{TemplateBinding Foreground}" RecognizesAccessKey="True" />
							</DockPanel>
							<Popup Name="PART_Popup" Placement="Bottom" HorizontalOffset="-1" VerticalOffset="1" MinWidth="{TemplateBinding ActualWidth, Converter={ui:MathConverter Add}, ConverterParameter={ui:Double 10}}" AllowsTransparency="True" StaysOpen="True" Focusable="False">
								<Border Margin="0,0,10,10" SnapsToDevicePixels="True" BorderThickness="1" BorderBrush="#bababa" Background="White">
									<Border.Effect>
										<DropShadowEffect BlurRadius="4" ShadowDepth="4" Opacity=".4" />
									</Border.Effect>
									<ContentPresenter Name="DropDownContent" ContentSource="DropDownContent" TextElement.Foreground="{TemplateBinding Foreground}" />
								</Border>
							</Popup>
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsDropDownContextMenu" Value="True">
							<Setter TargetName="DropDownContent" Property="Content" Value="{x:Null}" />
						</Trigger>
						<Trigger Property="IsKeyboardFocusWithin" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="Border" Property="Background" Value="#e0eef9" />
						</Trigger>
						<Trigger Property="IsDropDownOpen" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#005499" />
							<Setter TargetName="Border" Property="Background" Value="#cce4f7" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Content" Property="TextElement.Foreground" Value="#757575" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="Border" Property="Background" Value="#f9f9f9" />
							<Setter TargetName="Arrow" Property="Fill" Value="#909090" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>