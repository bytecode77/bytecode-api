<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiSplitButton}" BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="MinWidth" Value="85" />
		<Setter Property="Padding" Value="8,3" />
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="White" />
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiSplitButton}">
					<Border Name="Border" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<Grid>
							<DockPanel>
								<Button Name="PART_DropDownButton" DockPanel.Dock="Right" Margin="-1" ClickMode="Press" BorderBrush="{TemplateBinding BorderBrush}" Focusable="False">
									<Button.Style>
										<Style TargetType="{x:Type Button}">
											<Setter Property="Background" Value="Transparent" />
											<Setter Property="Template">
												<Setter.Value>
													<ControlTemplate TargetType="{x:Type Button}">
														<Border Name="Border" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
															<Path Name="Arrow" Data="M 0 0 L 6 0 L 3 3 Z" Margin="3,0" VerticalAlignment="Center" Fill="Black" />
														</Border>
														<ControlTemplate.Triggers>
															<Trigger Property="IsPressed" Value="True">
																<Setter TargetName="Border" Property="Background" Value="#cce4f7" />
															</Trigger>
															<Trigger Property="IsEnabled" Value="False">
																<Setter TargetName="Arrow" Property="Fill" Value="#909090" />
															</Trigger>
														</ControlTemplate.Triggers>
													</ControlTemplate>
												</Setter.Value>
											</Setter>
										</Style>
									</Button.Style>
								</Button>
								<ContentPresenter Name="Content" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}" TextElement.Foreground="{TemplateBinding Foreground}" RecognizesAccessKey="True" />
							</DockPanel>
							<Popup Name="PART_Popup" Placement="Bottom" HorizontalOffset="-1" VerticalOffset="1" MinWidth="{TemplateBinding ActualWidth, Converter={ui:MathConverter Add}, ConverterParameter={ui:Double 10}}" AllowsTransparency="True" StaysOpen="True" Focusable="False">
								<Border Name="PART_PopupBorder" Margin="0,0,10,10" SnapsToDevicePixels="True" BorderThickness="1" BorderBrush="#bababa" Background="White">
									<Border.Effect>
										<DropShadowEffect BlurRadius="4" ShadowDepth="4" Opacity=".4" />
									</Border.Effect>
									<ContentPresenter Name="DropDownContent" ContentSource="DropDownContent" />
								</Border>
							</Popup>
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsDropDownContextMenu" Value="True">
							<Setter TargetName="DropDownContent" Property="Content" Value="{x:Null}" />
						</Trigger>
						<Trigger Property="IsKeyboardFocusWithin" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#006bbe" />
						</Trigger>
						<Trigger Property="IsDropDownOpen" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#005499" />
							<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#005499" />
							<Setter TargetName="Border" Property="Background" Value="#d6e9f8" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#006bbe" />
							<Setter TargetName="Border" Property="Background" Value="#e0eef9" />
							<Setter TargetName="PART_DropDownButton" Property="Background" Value="#e0eef9" />
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="Border" Property="BorderBrush" Value="#005499" />
							<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#005499" />
							<Setter TargetName="Border" Property="Background" Value="#cce4f7" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Content" Property="TextElement.Foreground" Value="#757575" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="PART_DropDownButton" Property="BorderBrush" Value="#e9e9e9" />
							<Setter TargetName="Border" Property="Background" Value="#f9f9f9" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>