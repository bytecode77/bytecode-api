<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls"
	xmlns:converter="clr-namespace:BytecodeApi.Wpf.Cui.Converters">
	<Style x:Key="UiTabControlItemStyle" TargetType="{x:Type TabItem}">
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
		<Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
		<Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
		<Setter Property="HeaderTemplate" Value="{Binding ItemTemplate, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
		<Setter Property="HeaderTemplateSelector" Value="{Binding ItemTemplateSelector, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
		<Setter Property="HeaderStringFormat" Value="{Binding ItemStringFormat, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiTabControl}}}" />
	</Style>
	<Style x:Key="UiTabControlItemTopStyle" TargetType="{x:Type TabItem}" BasedOn="{StaticResource UiTabControlItemStyle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type TabItem}">
					<Border Name="Border" Margin="0,3,-1,0" Padding="8,3" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="#f6f6fb" SnapsToDevicePixels="True">
						<ContentPresenter Name="Header" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger SourceName="Border" Property="IsMouseOver" Value="True">
							<Setter TargetName="Border" Property="Background" Value="White" />
						</Trigger>
						<Trigger Property="IsSelected" Value="True">
							<Setter TargetName="Border" Property="Margin" Value="0,0,-1,0" />
							<Setter TargetName="Border" Property="Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
							<Setter TargetName="Border" Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={ui:ThicknessConverter SetBottom}}" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Header" Property="TextElement.Foreground" Value="#757575" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style x:Key="UiTabControlItemBottomStyle" TargetType="{x:Type TabItem}" BasedOn="{StaticResource UiTabControlItemStyle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type TabItem}">
					<Border Name="Border" Margin="0,0,-1,3" Padding="8,3" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="#f6f6fb" SnapsToDevicePixels="True">
						<ContentPresenter Name="Header" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger SourceName="Border" Property="IsMouseOver" Value="True">
							<Setter TargetName="Border" Property="Background" Value="White" />
						</Trigger>
						<Trigger Property="IsSelected" Value="True">
							<Setter TargetName="Border" Property="Margin" Value="0,0,-1,0" />
							<Setter TargetName="Border" Property="Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
							<Setter TargetName="Border" Property="BorderThickness" Value="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={ui:ThicknessConverter SetTop}}" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Header" Property="TextElement.Foreground" Value="#757575" />
							<Setter TargetName="Border" Property="BorderBrush" Value="#e9e9e9" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style TargetType="{x:Type ctrl:UiTabControl}" BasedOn="{StaticResource {x:Type TabControl}}">
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="#bababa" />
		<Setter Property="Background" Value="White" />
		<Setter Property="Padding" Value="10" />
		<Setter Property="ItemContainerStyle" Value="{StaticResource UiTabControlItemTopStyle}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiTabControl}">
					<DockPanel>
						<Grid DockPanel.Dock="{TemplateBinding TabStripPlacement}">
							<DockPanel>
								<FrameworkElement Width="{TemplateBinding TabPanelOffset}" />
								<TabPanel Name="TabPanel" IsItemsHost="True" HorizontalAlignment="Left" />
							</DockPanel>
							<DockPanel Name="TopTabStrip" VerticalAlignment="Bottom" Visibility="Collapsed">
								<Border Name="Border1" Width="{TemplateBinding TabPanelOffset}" Height="{Binding BorderThickness.Top, RelativeSource={RelativeSource TemplatedParent}}" Background="{TemplateBinding BorderBrush}" />
								<FrameworkElement Width="{Binding ActualWidth, ElementName=TabPanel}" />
								<Border Name="Border2" Height="{Binding BorderThickness.Top, RelativeSource={RelativeSource TemplatedParent}}" Background="{TemplateBinding BorderBrush}" />
							</DockPanel>
							<DockPanel Name="BottomTabStrip" VerticalAlignment="Top" Visibility="Collapsed">
								<Border Name="Border3" Width="{TemplateBinding TabPanelOffset}" Height="{Binding BorderThickness.Bottom, RelativeSource={RelativeSource TemplatedParent}}" Background="{TemplateBinding BorderBrush}" />
								<FrameworkElement Width="{Binding ActualWidth, ElementName=TabPanel}" />
								<Border Name="Border4" Height="{Binding BorderThickness.Bottom, RelativeSource={RelativeSource TemplatedParent}}" Background="{TemplateBinding BorderBrush}" />
							</DockPanel>
						</Grid>
						<Border Name="Border5" Padding="{TemplateBinding Padding}" BorderThickness="{Binding ., RelativeSource={RelativeSource TemplatedParent}, Converter={converter:TabControlBorderThicknessConverter}}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
							<ContentPresenter Name="Content" ContentSource="SelectedContent" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" ContentStringFormat="{TemplateBinding ContentStringFormat}" />
						</Border>
					</DockPanel>
					<ControlTemplate.Triggers>
						<Trigger Property="TabStripPlacement" Value="Top">
							<Setter TargetName="TopTabStrip" Property="Visibility" Value="Visible" />
						</Trigger>
						<Trigger Property="TabStripPlacement" Value="Bottom">
							<Setter TargetName="BottomTabStrip" Property="Visibility" Value="Visible" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="#757575" />
							<Setter TargetName="Content" Property="TextElement.Foreground" Value="#757575" />
							<Setter TargetName="Border1" Property="Background" Value="#e9e9e9" />
							<Setter TargetName="Border2" Property="Background" Value="#e9e9e9" />
							<Setter TargetName="Border3" Property="Background" Value="#e9e9e9" />
							<Setter TargetName="Border4" Property="Background" Value="#e9e9e9" />
							<Setter TargetName="Border5" Property="BorderBrush" Value="#e9e9e9" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="TabStripPlacement" Value="Bottom">
				<Setter Property="ItemContainerStyle" Value="{StaticResource UiTabControlItemBottomStyle}" />
			</Trigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>