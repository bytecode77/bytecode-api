<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls"
	xmlns:converter="clr-namespace:BytecodeApi.Wpf.Cui.Converters">
	<Style TargetType="{x:Type ctrl:UiFieldSetItem}">
		<Setter Property="Focusable" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiFieldSetItem}">
					<Border Margin="{Binding Spacing, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiFieldSet}}, Converter={converter:FieldSetItemSpacingConverter}}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<DockPanel MinHeight="24">
							<Label Name="HeaderLabel" Content="{TemplateBinding Header}" MinWidth="{Binding LabelWidth, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiFieldSet}}}" Padding="0,4,0,0" />
							<ContentPresenter Margin="{TemplateBinding Padding}" />
						</DockPanel>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="Header" Value="{x:Null}">
							<Setter TargetName="HeaderLabel" Property="Visibility" Value="Collapsed" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<DataTrigger Binding="{Binding Orientation, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiFieldSet}}}" Value="Vertical">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ctrl:UiFieldSetItem}">
							<Border Margin="{Binding Spacing, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiFieldSet}}, Converter={converter:FieldSetItemSpacingConverter}}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
								<StackPanel>
									<Label Name="HeaderLabel" Content="{TemplateBinding Header}" Padding="0,0,0,3" />
									<ContentPresenter Margin="{TemplateBinding Padding}" />
								</StackPanel>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="Header" Value="{x:Null}">
									<Setter TargetName="HeaderLabel" Property="Visibility" Value="Collapsed" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</DataTrigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>