<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:ctrl="clr-namespace:BytecodeApi.Wpf.Cui.Controls">
	<Style TargetType="{x:Type ctrl:UiPropertyGridItem}">
		<Setter Property="MinHeight" Value="23" />
		<Setter Property="Focusable" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:UiPropertyGridItem}">
					<Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<Border BorderThickness="0,1,0,0" BorderBrush="#f4f7fc" Background="Transparent" SnapsToDevicePixels="True">
							<DockPanel>
								<Border Name="Header" BorderThickness="0,0,1,0" BorderBrush="#f4f7fc" SnapsToDevicePixels="True">
									<Label Name="PART_HeaderLabel" Content="{TemplateBinding Header}" Width="{Binding LabelWidth, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiPropertyGrid}}}" Padding="4,3,0,0" TextElement.Foreground="{TemplateBinding Foreground}" />
								</Border>
								<Grid Margin="{TemplateBinding Padding}" ClipToBounds="True">
									<ContentPresenter Name="PART_ContentPresenter" Margin="-1" />
								</Grid>
							</DockPanel>
						</Border>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsSelected" Value="True">
							<Setter TargetName="PART_HeaderLabel" Property="Foreground" Value="White" />
							<Setter TargetName="Header" Property="Background" Value="#0078d7" />
						</Trigger>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True" />
								<Condition Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType={x:Type ctrl:UiPropertyGrid}}}" Value="False" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="PART_HeaderLabel" Property="Foreground" Value="Black" />
							<Setter TargetName="Header" Property="Background" Value="#f4f7fc" />
						</MultiDataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>